{
"manifest_version": 2
, "name": "jet-tabcheck"
, "description": "Browser tab display doublechecker for things like Zoom calls"
, "version": "0.1"

, "permissions": [
	"<all_urls>",
	"tabs",
	"storage",
	"unlimitedStorage",
	"contextMenus"
]

, "icons": {
	"16": "icon16.png",
	"48": "icon48.png",
	"128": "icon128.png"
}

, "browser_action": {
	"default_icon": "icon16.png",
	"default_popup": "popup.html"
}

, "background": {
	"scripts": ["background.js"]
	, "persistent": false
}

, "content_scripts": [
		{
			"matches": [
				"http://*/*", "https://*/*"
			]
			, "js": ["content.js"]
			, "run_at": "document_end"
		}
	]
	, "chrome_url_overrides": {
	    "newtab": "blank.html"
	}
}